{
  "manifest_version": 2,
  "name": "Stylebot",
  "version": "2.2",
  "description": "Style your pages",

  "background": {
    "scripts": [
      "browser-polyfill.min.js",
      "background-is-in-development.js",
      "BrowserAction/BrowserAction.js"
    ]
  },

  "options_page": "options/index.html",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.min.js", "apply-css.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.min.js", "editor-content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "browser_action": {
    "default_icon": {
      "32": "BrowserAction/Images/css-light-mode.png",
      "64": "BrowserAction/Images/css-light-mode@2x.png"
    },
    "default_title": "Brush",
    "default_popup": "BrowserAction-Popup/index.html"
  },

  "icons": {
    "32": "BrowserAction/Images/css-light-mode.png",
    "34": "BrowserAction/Images/css-light-mode@2x.png"
  },

   "web_accessible_resources": [
     "build-stylebot-editor-content-script/*"
   ],

  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "unlimitedStorage",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
